<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"> <!-- Sadece dikey padding, daha az -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_background_received"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/textMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent message"
            android:textColor="@color/lightBeige"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
