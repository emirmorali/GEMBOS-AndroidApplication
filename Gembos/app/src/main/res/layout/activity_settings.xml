<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttonColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newBlue"
            app:title="Settings"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_back" />

        <!-- Notifications Section -->
        <TextView
            android:id="@+id/tv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <Switch
            android:id="@+id/switch_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications On/Off"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Theme Section -->
        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Encryption Section -->
        <TextView
            android:id="@+id/tv_encryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encryption"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <CheckBox
            android:id="@+id/checkbox_encryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Message Encryption"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Auto Sync Section -->
        <TextView
            android:id="@+id/tv_auto_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Sync"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />
        <Switch
            android:id="@+id/switch_auto_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Sync Messages"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/newBlue"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="24dp" />

        <!-- Log Out Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white" />

        <!-- App Version -->
        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textColor="@color/black"
            android:layout_marginTop="32dp" />

    </LinearLayout>
</ScrollView>
