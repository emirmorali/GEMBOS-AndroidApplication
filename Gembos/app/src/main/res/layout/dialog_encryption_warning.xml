<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialog"
    android:padding="16dp"
    android:elevation="8dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Warning!"
        android:textColor="@color/lightBeige"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The contact you are texting is not using GEMBOS. Therefore the messages are not encrypted. Communication may not be secure."
        android:textColor="@color/lightBeige"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnSubmitPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/accentOrange"
        android:text="OK"
        android:textColor="@color/lightBeige"
        android:padding="12dp" />
</LinearLayout>
